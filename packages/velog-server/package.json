{
  "name": "velog-server",
  "version": "1.0.0",
  "author": {
    "name": "velopert",
    "email": "public.velopert@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "velog"
  ],
  "engines": {
    "node": ">=18.16"
  },
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "prisma:copy": "cp -R ../velog-prisma/prisma ./prisma",
    "prisma:rm": "rm -rf ./prisma",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "nodemon --watch './**/*.ts' --exec 'node --loader ts-paths-esm-loader' src/main.ts | pino-pretty",
    "start": "pnpm ssm pull -e production && pnpm build && pnpm prod",
    "prod": "NODE_ENV=production node dist/src/main.js",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "pnpm jest --detectOpenHandles",
    "create-service": "tsx ./scripts/createService.ts",
    "create-mock": "tsx ./scripts/createMock.ts",
    "ssm": "tsx ./scripts/ssm/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ecr": "^3.379.1",
    "@aws-sdk/client-ssm": "^3.379.1",
    "@elastic/elasticsearch": "^8.9.0",
    "@fastify/autoload": "^5.7.1",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/formbody": "^7.4.0",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@octokit/rest": "^20.0.1",
    "@prisma/client": "^5.2.0",
    "axios": "^1.4.0",
    "dataloader": "^2.2.2",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.1.4",
    "fastify": "^4.18.0",
    "googleapis": "^124.0.0",
    "graphql": "^16.7.1",
    "graphql-scalars": "^1.22.2",
    "inquirer": "^9.2.7",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^10.0.0",
    "mercurius": "^13.0.0",
    "pino-pretty": "^10.0.0",
    "prisma": "^5.2.0",
    "qs": "^6.11.2",
    "rambda": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "remove-markdown": "^0.5.0",
    "tsc-alias": "^1.8.7",
    "tsx": "^3.12.7",
    "tsyringe": "^4.7.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/qs": "^6.9.7",
    "@types/remove-markdown": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.4",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.1",
    "ts-jest-mock-import-meta": "^1.0.0",
    "ts-node": "^10.9.1",
    "ts-paths-esm-loader": "^1.4.3",
    "typescript": "^5.1.6"
  }
}
